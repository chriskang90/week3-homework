<div><h2><%= @place.title %></h2><%=link_to "Edit this place", "/places/#{@place.id}/edit"%></div>
<img src="<%=@place.photo_url %>">
<p> <%=@place.description%></p>
<h4>Admission Price: $<%=@place.admission_price %></h4>

<h3>Add Review</h3>

<%= stylesheet_link_tag "formstyle.css" %>
<form action="/places/<%=@place.id%>/review">

Review Title<br>
<input name="rtitle" class="form">
<br>

Description<br>  
<input name="description" class="form">
<br>

Rating<br>
<select name="rating">
<option value="5">5 stars</option>
<option value="4">4 stars</option>
<option value="3">3 stars</option>
<option value="2">2 stars</option>
<option value="1">1 stars</option>
</select>
<br>
<br>

<button>Submit</button>

</form>

<h3>Current Reviews </h3>

<%= @reviews.each do |review| %>

<p>(<%=review.rating%> stars) <%=review.title%>: <%=review.description%> </p>

<% end %>